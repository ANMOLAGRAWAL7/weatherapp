<%- include("partials/header.ejs") %>

<!-- Navbar -->
<nav id="topnav" class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
  <div class="container d-flex justify-content-center align-items-center">
    <img class="logo-icon" src="/images/weath.png" alt="weather icon">
    <p class="display-6 icon-text fw-bold website-title ms-3">Get Weather</p>
  </div>
</nav>

<!-- Search Bar -->
<nav class="navbar navbar-light bg-light py-3">
  <div class="container-fluid d-flex justify-content-center">
    <form class="d-flex cards shadow" action="/getcity" method="post">
      <input type="text" class="form-control me-3 py-2 search-input" id="cityName" name="city" placeholder="Enter your city..." required>
      <button class="btn btn-outline-primary search-button" id="submit_button" type="submit">Search</button>
    </form>
  </div>
</nav>

<div class="container py-5">
  <header class="text-center">
    <h1 class="display-2 fw-normal text-primary">
      <span id="displayCity"><%= usercity.city %></span>
    </h1>
    <p class="fs-5 text-secondary"><%= usercity.description %></p>
  </header>

  <main>
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">

      <!-- Humidity -->
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3 bg-primary text-white">
            <h4 class="my-0 fw-normal">Humidity Info</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title"><span class="humidity"><%= usercity.humidity %></span><small> %</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li>Dew is <span class="rain_update"><%= usercity.dew %></span></li>
              <li>Pressure is <span class="rain_update"><%= usercity.pressure %></span></li>
              <li>precipitation probability <span id="min_temp"><%= usercity.pricepprob %></span>%</li>
            </ul>
            <button type="button" class="w-100 btn btn-lg btn-primary">
              <img src="https://cdn.iconscout.com/icon/premium/png-256-thumb/humid-2363200-1972079.png?f=webp&amp;w=128" alt="humidity icon" style="width: 20%;">
            </button>
          </div>
        </div>
      </div>

      <!-- Temperature -->
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3 bg-warning text-white">
            <h4 class="my-0 fw-normal">Temperature</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title"><span class="temp"><%= usercity.temperature %></span><small> Â°C</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li>Temperature feelslike is <span class="Small_temp"><%= usercity.feelslike %></span>Â°C</li>
              <li>Min. temp is <span id="min_temp"><%= usercity.mintemp %></span>Â°C</li>
              <li>Max. temp is <span id="max_temp"><%= usercity.maxtemp %></span>Â°C</li>
            </ul>
            <button type="button" class="w-100 btn btn-lg btn-warning">
              <img src="https://cdn3d.iconscout.com/3d/free/thumb/free-temperature-4115279-3403554@0.png" alt="Free Temperature 3D Illustration" loading="lazy" style="width: 20%;">
            </button>
          </div>
        </div>
      </div>

      <!-- Wind Speed -->
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3 bg-secondary text-white">
            <h4 class="my-0 fw-normal">Wind Speed</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title"><span class="wind_speed"><%= usercity.windspeed %></span><small> km/hr</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li>Visibility is <span id="wind_degrees"><%= usercity.visibility %></span></li>
              <li>ðŸŒ… Sunrise: <span id="sunrise"><%= usercity.sunrise %></span></li>
              <li>ðŸŒ‡ Sunset : <span id="sunset"><%= usercity.sunset %></span></li>
            </ul>
            <button type="button" class="w-100 btn btn-lg btn-secondary">
              <img class="wob_tci" alt="Haze" src="//ssl.gstatic.com/onebox/weather/64/fog.png" id="wob_tci" style="width: 20%;">
            </button>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

